<!-- Scroll detection script -->
<script>
  let timeoutId; // To keep track of the timeout

  document.addEventListener("scroll", () => {
    const thatsItMessage = document.getElementById("thats-it");
    const scrollPosition = window.innerHeight + window.scrollY;
    const pageHeight = document.body.offsetHeight;

    if (scrollPosition >= pageHeight - 10) { // Adjust threshold as needed
      thatsItMessage!.style.opacity = "1"; // Show the message

      // Clear any existing timeout to prevent premature hiding
      clearTimeout(timeoutId);

      // Set a timeout to hide the message after 2 seconds
      timeoutId = setTimeout(() => {
        thatsItMessage!.style.opacity = "0"; // Hide the message
      }, 1000);
    }
  });
</script>

<!-- Styling -->
<style>
  .hidden-message {
